<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rlContainerPaymentCard"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".PaymentCardActivity">

    <RelativeLayout
        android:id="@+id/rlPaycardHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">

        <ImageView
            android:id="@+id/sheild_icon_paycard"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="1dp"
            android:src="@drawable/ic_shield" />

        <TextView
            android:id="@+id/tvPaymentPaycard"
            style="@style/TextAppearance.AppCompat.Headline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/sheild_icon_paycard"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:gravity="center_horizontal"
            android:text="PAYMENT"
            android:textAllCaps="true"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvHotelandRoomPaycard"
            style="@style/TextAppearance.AppCompat.Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvPaymentPaycard"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="1dp"
            android:gravity="center_horizontal"
            android:text="Hotel WE"
            android:textColor="@color/success"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/tvDatePaycard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvHotelandRoomPaycard"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="5dp"
            android:gravity="center_horizontal"
            android:text="Room no 102 for 22-06-2021"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="italic" />


        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@id/tvDatePaycard"
            android:background="@color/colorPrimary" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/llPaycardBody"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rlPaycardHeader"
        android:orientation="vertical"
        android:padding="10dp">

        <RelativeLayout
            android:id="@+id/rlHotelFeePaycard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp">


            <TextView
                android:id="@+id/tvHotelFeePaycard"
                style="@style/TextAppearance.AppCompat.Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:text="Room Fee"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tvHfeeAmountPaycard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:paddingLeft="20dp"
                android:text="1245.0"
                android:textColor="@color/black"
                android:textSize="16sp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rlVatPaycard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp">


            <TextView
                android:id="@+id/tvVatTextPaycard"
                style="@style/TextAppearance.AppCompat.Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:text="VAT(5.0%)"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tvVatAmountPaycard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:paddingLeft="20dp"
                android:text="50.0"
                android:textColor="@color/black"
                android:textSize="16dp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rlGatewayFeePaycard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp">


            <TextView
                android:id="@+id/tvGateFeeTextPaycard"
                style="@style/TextAppearance.AppCompat.Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"

                android:text="Payment Gateway Fee"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tvGateFeeAmountPaycard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:paddingLeft="20dp"
                android:text="27.0"
                android:textColor="@color/black"
                android:textSize="16dp" />

        </RelativeLayout>

        <View
            android:id="@+id/ic_line_payment_card"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="10dp"
            android:background="@color/black" />


        <RelativeLayout
            android:id="@+id/rlTotalAmountPayCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp">


            <TextView
                android:id="@+id/tvTotalTextPaycard"
                style="@style/TextAppearance.AppCompat.Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:text="Total Amount"
                android:textSize="18sp" />


            <TextView
                android:id="@+id/tvTotalAmountPaycard"
                style="@style/TextAppearance.AppCompat.Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:paddingLeft="20dp"
                android:text="1317.0"
                android:textColor="@color/black"
                android:textSize="18sp" />

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llPatcardConfirmation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:animateLayoutChanges="true"
        android:orientation="horizontal"
        tools:visibility="visible">

        <TextView

            android:id="@+id/tvFailedPaycard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Failed"
            android:textColor="@color/error"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvSuccessPaycard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Success"
            android:textColor="@color/success"
            android:textSize="18sp"
            android:textStyle="bold" />

    </LinearLayout>


</RelativeLayout>
